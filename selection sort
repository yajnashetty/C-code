//selection sort
#include<stdio.h>
void main()
{
    int i , arr[100];
    printf("enter the size of the array: ");
    int n;
    scanf("%d",&n);
    printf("enter the array elements");
    for (i = 0; i<n ; i++)
    {
        scanf("%d",&arr[i]);
    }
    for (i = 0; i<n ; i++)
    {
        printf("%d",arr[i]);
    }
    int temp;
    for(i = 0 ; i<n ; i++)
    {
        for(int j= 0 ; j<n-1-i; j++)
        {
            if (arr[j] > arr[j+1])
            {
                temp = arr[j];
                arr[j] = arr[j+1];
                arr[j+1] = temp;
            }
        }
    }
    printf("\narray elements after sorting");
    for (i = 0; i<n ; i++)
    {
        printf("%d",arr[i]);
    }
}
