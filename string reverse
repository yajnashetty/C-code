// c program to reverse the string 
#include <stdio.h>
#include<string.h>

int main() {
    char str[100],str1[100];
    printf("enter the string :");
    scanf("%[^\n]s",&str);
    printf("the original string is :%s\n",str);
    int len = strlen(str);
    for(int i = 0; i<strlen(str); i++)
    {
        str1[i] = str[len-1-i];
    }
    printf("the reverse of string is : %s",str1);
    return 0;
}
